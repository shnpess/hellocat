<% @post.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<div class="form">
  <%= form_with(model: @post, local: true) do |form| %>
    <div class="form__contents">
      <% if @post.image.present? %>
        <%= image_tag @post.image.url, id: :img_prev %>
      <% else %>
        <%= image_tag "", id: :img_prev, alt: "画像がありません"  %>
      <% end %>
      <%= form.label :image, class: "form__image" do %> 
        <i class="fas fa-image fa-2x"></i>
        <%= form.file_field :image %>
        <span class="form__image__text">画像を変更する</span>
        <div class="image__prev">
        </div>
      <% end %> 
        <span>名前: <%= form.text_field :name, placeholder: "例)太郎",class: "form__string" %></span>
                <span>種類: <%= form.text_field :kind, placeholder: "例)アメショ", class: "form__string" %></span>
                <span>年齢: <%= form.text_field :age, placeholder: "例)1歳、子犬など", class: "form__string" %></span>
                <div class="form__string__radio">
                性別: 　　<%= form.radio_button :gender, :"オス" %>
                <%= form.label :gender, "オス", {value: :"オス", style: "display: inline-block;"} %>
                <%= form.radio_button :gender, :"メス" %>
                <%= form.label :gender, "メス", {value: :"メス", style: "display: inline-block;"} %>
                </div>
                <div class="form__string__radio">
                予防接種: <%= form.radio_button :vaccination, :"済み" %>
                <%= form.label :vaccination, "済み", {value: :"済み", style: "display: inline-block;"} %>
                <%= form.radio_button :vaccination, :"無し" %>
                <%= form.label :vaccination, "無し", {value: :"無し", style: "display: inline-block;"} %>
                </div>
                <span>性格: <%= form.text_field :character, placeholder: "例)やんちゃ",class: "form__string" %></span>
                <span>　　  <%= form.text_area :content, placeholder: "好きなコメントをどうぞ！", class: "form__content" %></span>
      <%= form.submit "SEND", class: "send__btn" %>
    </div>
  <% end %>
</div>
