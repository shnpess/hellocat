<% @post.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<div class="form">
  <%= form_with(model: @post, local: true) do |form| %>
    <div class="form__content">
      <%= form.text_field :name, placeholder: "＃名前", class: "form__string" %>
      <%= form.text_field :age, placeholder: "＃年齢", class: "form__string" %>
      <%= form.text_field :weight, placeholder: "＃体重", class: "form__string" %>
      <%= form.text_field :gender, placeholder: "＃性別", class: "form__string" %>
      <%= form.text_field :character, placeholder: "＃性格", class: "form__string" %>
      <%= form.text_area :content, placeholder: "＃自己紹介" , rows: "5", class: "form__content" %>
      <%= form.label :image, class: "form__image" do %> 
        <i class="fas fa-image fa-2x"></i>
        <%= form.file_field :image %>
        <span class="form__image__text">画像を追加する</span>
      <% end %> 
      <%= form.submit "SEND", class: "send__btn" %>
    </div>
  <% end %>
</div>