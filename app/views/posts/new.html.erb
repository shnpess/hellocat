<% @post.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>
<div class="form">
<%= form_with(model: @post, local: true) do |form| %>
  
    <div class="form__contents">
      <% if @post.image.present? %>
        <%= image_tag @post.image.url, id: :img_prev %>
      <% else %>
        <%= image_tag "", id: :img_prev, alt: "画像がありません"  %>
      <% end %>
      <%= form.label :image, class: "form__image" do %> 
        <i class="fas fa-image fa-2x"></i>
        <%= form.file_field :image %>
        <span class="form__image__text">画像を追加する</span>
      <% end %> 
        
      <%= form.text_field :name, placeholder: "例)太郎",class: "form__string" %>
      <%= form.text_field :kind, placeholder: "例)アメショ", class: "form__string" %>
      <div class="comment__container">
      <%= form.radio_button :gender, :"オス" %>
      <%= form.label :gender, "オス", {value: :"オス", style: "display: inline-block;"} %>
      <%= form.radio_button :gender, :"メス" %>
      <%= form.label :gender, "メス", {value: :"メス", style: "display: inline-block;"} %>
      </div>
      <%= form.text_field :character, placeholder: "例)やんちゃ",class: "form__string" %>
      <%= form.text_area :content, placeholder: "好きなコメントをどうぞ！", class: "form__content" %>
      <%= form.submit "SEND", class: "send__btn" %>
      
  
<% end %>
</div>

