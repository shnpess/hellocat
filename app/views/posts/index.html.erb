<div class="posts">
  <% @posts.each do |post| %>
  <%= link_to post_path(post.id), id: "links" do %>
    <div class="post__content">
      <div class="post__content__upper">
        <div class="user__info">
        
        <%= image_tag post.user.picture.url, class: "post__user__image" %>
        <%= post.user.nickname %>さんの投稿
        
        </div>
        <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      </div>

      <div class="post__content__middle">
        <div class="post__content__image">
          <%= image_tag post.image.url, class: "post__image" %>
        </div>

        <div class="post__content__right">
          <div class="ma">
            <div class="post__content__right__part">
              名前：<%= post.name %>
            </div>
            <div class="post__content__right__part">
              種類：<%= post.kind %>
              
            
            </div>
            <div class="post__content__right__part">
              年齢：<%= post.age %>
            </div>
            <div class="post__content__right__part">
              出身：<%= post.user.addres %>
            </div>
          </div>
          <div class="ma">
            <div class="post__content__right__part">
              性別：<%= post.gender %>
            </div>
            <div class="post__content__right__part">
              予防接種：<%= post.vaccination %>
            </div>
            <div class="post__content__right__part">
              性格：<%= post.character %>
            </div>
          </div>  
        </div>
      </div>

      <div class="post__content__bottom">
        <div class="post__content__left__part">
          <%= simple_format post.content %>
          
        </div>
      </div>   
    </div>
  <% end %>
  <% end %>
</div>
<% if user_signed_in? %>
<div class="container">
  <button type="button" class="post__logo" data-toggle="modal" data-target="#post"><i class="fas fa-paw"> 投稿</i></button>
  <div class="modal fade" id="post" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="form">
          <%= form_with(model: @post, local: true) do |form| %>
            <div class="modal-body">
              <div class="form__contents">
                <% if @post.image.present? %>
                  <%= image_tag @post.image.url, id: :img_prev %>
                <% else %>
                  <%= image_tag "", id: :img_prev, alt: "画像がありません"  %>
                <% end %>
                <%= form.label :image, class: "form__image" do %> 
                  <i class="fas fa-image fa-2x"></i>
                  <%= form.file_field :image %>
                  <span class="form__image__text">画像を追加する</span>
                <% end %> 
                  
                <div class="form__area">名前: <%= form.text_field :name, placeholder: "例)太郎"%></div>
                <div class="form__area">種類: <%= form.collection_select :kind, @category_kind, :name, :name, prompt: "選択してください" %></div>
                <div class="form__area">年齢: <%= form.collection_select :age, @category_age, :name, :name, prompt: "選択してください" %></div>
                <div class="form__area">性別: <%= form.collection_select :gender, @category_gender, :name, :name, prompt: "選択してください" %></div>
                <div class="form__area">ﾜｸﾁﾝ: <%= form.collection_select :vaccination, @category_vaccination, :name, :name, prompt: "選択してください" %></div>
                <div class="form__area">性格: <%= form.collection_select :character, @category_character, :name, :name, prompt: "選択してください" %></div>
                <div class="form__area"> <%= form.text_area :content, placeholder: "好きなコメントをどうぞ！", class: "form__content" %></div>
               <div class="footer__btn">
                <%= form.submit "SEND", class: "send__btn" %>
                <button type="button" class="close__btn" data-dismiss="modal">閉じる</button>
               </div> 
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>











