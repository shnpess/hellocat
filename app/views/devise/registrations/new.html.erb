<div class="login-page">
  <div class="login__form">
  <h2>SIGN UP</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.text_field :nickname, autofocus: true, class: "field", placeholder: "Nickname", autocomplete: "nickname" %>
        <%= f.email_field :email, autofocus: true, class: "field", placeholder: "Email", autocomplete: "email" %>
        <%= f.password_field :password, class: "field", placeholder: "Password(6文字以上)", autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, class: "field", placeholder: "Password(再入力)", autocomplete: "new-password" %>
        <%= f.submit "Sign Up", class: "form__submit" %>        
    <% end %>
<%= render "devise/shared/links" %>
  </div>
</div>

